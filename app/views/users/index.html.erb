<div class="container">
  <div class="row">
    <a href="/dashboard" class='ui primary button'>< Back to Dashboard</a>

    <h3>All Users (<%= @users.length %>)</h3>

    <table class="ui celled striped table">
        <thead>
          <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Date Created</th>
            <th>Steam Profile Url</th>
            <th>Trade Url</th>
            <th>Cashrep Url</th>
            <th>Is Trader</th>
            <th>Occupation</th>
            <th>Setup Completed</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.phone_number %></td>
              <td><%= user.created_at.in_time_zone(-4).strftime('%m/%d/%Y %l:%M%p') %></td>
              <td><%= user.profile_url %></td>
              <td><%= user.trade_url %></td>
              <td><%= user.cashrep_url %></td>
              <td><%= user.is_trader %></td>
              <td><%= user.occupation %></td>
              <td><%= user.setup_completed %></td>
            </tr>
          <% end %>
        </tbody>
      </table>



